extends ../layouts/main

block content
  section.main-header(style='background-image:url(/images/PORTADA.webp)')
      header
        .container.text-center
          h2.h2.title Detalle de Queja
          ol.breadcrumb.breadcrumb-inverted
            li
              a(href='/')
                span.icon.icon-home
            li
              a.active(href='javascript: void(0)') Detalle de Queja
  section.login-wrapper.login-wrapper-page
    .container
      .cart-wrapper
        form#complaintDetail.panel.panel-default(data-complaint=complaint)
          .panel-heading Queja ID: #{id && id.substring(id.length - 5)}
          .panel-heading Fecha de Registro: {{date}}
          .panel-body
            .form-horizontal(style="padding: 0 2rem")
              .form-group(style="padding: 2rem")
                label.control-label(for="name" style="margin-bottom: 7px") Nombre del usuario
                input#name.form-control(type='text' name='customerName' placeholder='Ingresa tus nombres y apellidos' maxlength="50" required='', v-model='customerName', disabled)
              .form-group(style="padding: 2rem")
                label.control-label(for="email" style="margin-bottom: 7px") Correo electrónico del usuario
                input#email.form-control(type='email' name='customerEmail' parsley-type="email" placeholder='Ingresa tu correo electrónico*' required='', v-model='customerEmail', disabled)
              .form-group(style="padding: 2rem")
                label.control-label(for="phone" style="margin-bottom: 7px") Número de teléfono del usuario
                input#phone.form-control(type='text' name='customerPhone' oninput="this.value=this.value.replace(/[^0-9]/g,'');" minlength="9" maxlength="9" placeholder='Ingresa tu celular' required='', v-model='customerPhone', disabled)
              .form-group(style="padding: 2rem")
                label.control-label(style="margin-bottom: 7px") Motivo de la queja
                input#inputEmail5.form-control(type='text', placeholder='' name="reason" required, v-model='reason', disabled)
              .form-group(style="padding: 2rem")
                label.control-label(style="margin-bottom: 7px") Detalles de la queja
                textarea.form-control#inputEmail7(type='text',rows="7" placeholder='' name='details' style="resize: vertical", v-model='details', disabled)
              .form-group(style="padding: 2rem")
                label.control-label(style="margin-bottom: 7px") ¿Cómo espera que se resuelva la queja el usuario?
                textarea.form-control#inputEmail7(type='text',rows="7" placeholder='' name='answer' style="resize: vertical", v-model='pSolution', disabled)
              .form-group(style="padding: 2rem")
                label.control-label(style="margin-bottom: 7px") Respuesta brindada a la queja
                input#inputEmail5.form-control(type='text', placeholder='' name="reason" required, v-model='answer', disabled)
              .form-group.text-center(style="padding: 1rem")
                label.col-12.text-danger(style="padding: 2rem") Imágenes

              .form-group(v-for="( image, index ) in images" :image="image" :key="'image'+index")
                .text-center
                  img(:id="'image_'+index", :src=`image||"/images/descarga.jpeg"` style="object-fit: cover; cursor:pointer; max-width:280px" :url=`'hidden_url_'+index` @click="cloudinaryWidget(index)")
                  input(type="hidden" :id=`'hidden_url_'+index` name="image" :value="image")
              .text-center
                a.btn.btn-main(href='/admin/lista-quejas'  style='margin-right: 1rem; background-color:#FE4D13') Regresar

